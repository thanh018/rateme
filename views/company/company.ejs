<% layout('layout2') %>

<div id="wrapper">
  <div id="page-content-wrapper" class="create-company height-100vh py-0">
    <% include ../partials/navbar %>

    <div class="container">
      <div class="text-center">
        <p class="mainTitle mt-4 mb-0">Register Company</p>
      </div>
      <div class="row mb-3 justify-content-end">
        <a href="/companies" class="btn btn-secondary size-14 min-120 text-center">
          <span>Companies</span>
          <i class="fa fa-arrow-right square ml-1"></i>
        </a>
      </div>
      <div class="row">
        <div class="col-md-4 offset-md-4 relative">
          <form
            id="companyForm"
            class="relative"
            action="/company/create"
            enctype="multipart/form-data"
            method="POST"
          >
            <div class="form-group">
              <div
                class="logo-company centered mb-3"
                data-toggle="modal"
                data-target="#file"
              >
                <img
                  src="http://placehold.it/200x200"
                  width="200"
                  height="200"
                  alt="Logo"
                  class="imgCircle logo-image"
                />
              </div>
              <p id="completed" class="text-center text my-2 py-1 green-color bgGreen d-none">Logo had already been uploaded</p>
  
              <div id="file" class="modal modalUpload absolute middle align-items-center" tabindex="-1" role="dialog">
                <div class="modal-dialog my-0 width-100" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title text">Company Logo</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
  
                    <div class="modal-body">
                      <div class="">
                        <div class="progress">
                          <div class="progress-bar" role="progressbar">0%</div>
                        </div>
  
                        <button class="btn btn-block mt-3 upload-btn gray-color" type="button">
                          Upload
                        </button>
                        <input
                          type="file"
                          class="form-control upload-input"
                          name="image"
                          id="image"
                          style="display: none"
                        />
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group">
              <input
                id="name"
                class="form-control"
                name="name"
                type="text"
                placeholder="Company Name"
              />
            </div>
  
            <div class="form-group">
              <input
                id="address"
                class="form-control"
                name="address"
                type="text"
                placeholder="Address"
              />
            </div>
  
            <div class="form-group">
              <input
                id="city"
                class="form-control"
                name="city"
                type="text"
                placeholder="City"
              />
            </div>
  
            <div class="form-group">
              <input
                id="country"
                class="form-control"
                name="country"
                type="text"
                placeholder="Country"
              />
            </div>
  
            <div class="form-group">
              <input
                id="sector"
                class="form-control"
                name="sector"
                type="text"
                placeholder="Sector"
              />
            </div>
  
            <div class="form-group">
              <input
                id="website"
                class="form-control"
                name="website"
                type="text"
                placeholder="Website"
              />
            </div>
  
            <div class="form-group">
              <input
                id="register"
                value="Register"
                class="form-control btn btn-secondary"
                name="register"
                type="submit"
              />
            </div>
          </form>
          <div class="loading absolute middle half text-center d-none">
            <img src="../images/loading.gif" width="150" height="150" class="d-inline-block"/>
          </div>
        </div>
        <div class="col-md-3 errors">
          <div class="alert alert-success d-none">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">
              &times;
            </a>
            <span>Company data has been added.</span>
          </div>
          <div id="errorsMessage"></div>
        </div>
      </div>
    </div>
  </div>
</div>