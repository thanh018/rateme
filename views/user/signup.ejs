<% layout('layout') %>

<div class="relative">

  <div class="container signup-page pt-100">
    <div class="row">
      <div class="col-md-4 offset-md-4 px-4 py-5 radius-10 shadow-light bgWhite">
        <div class="text-center">
          <h1 class="mainTitle mb-3 logo">
            Rate Me
          </h1>
          <h2 class="title mb-4">Sign up</h2>
        </div>
        <form method="POST" class="" id="signupForm" action="/signup">
          <div class="form-group">
            <input id="fullname" class="form-control" name="fullname" type="text" autocomplete="on"
              placeholder="Full name"></div>

          <div class="form-group">
            <input id="email" class="form-control" name="email" type="text" autocomplete="on" placeholder="Email"></div>

          <div class="form-group">
            <input id="password" class="form-control" name="password" type="password" placeholder="Password"></div>


          <div class="form-group">
            <input type="submit" id="submit" value="Sign up" class="form-control btn btn-primary" name="submit"></div>
        </form>
        <div class="form-group">
          <a href="/auth/facebook" type="button" class="btn btn-facebook">
            <i class="fa fa-facebook"></i>
            <span>Login with Facebook</span>
          </a>
        </div>
        <div>
          <h4 class="text mb-0">
            <span>Already have an account?</span>
            <a href="/login" class="">Login</a>
          </h4>
        </div>
      </div>
      <div class="col-md-4 errors">
        <% if(hasErrors) {%>
          <% for(var i = 0; i <messages.length; i++) {%>
            <div class="alert alert-danger">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">
                &times;
              </a>
              <%= messages[i] %>
            </div>
          <% } %>
        <% } %>
      </div>
    </div>
  </div>
</div>