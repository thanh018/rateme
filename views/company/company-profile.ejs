<% layout('layout2') %>

<div id="wrapper">
  <div id="page-content-wrapper">
    <% include ../partials/navbar %>
    <div class="container">
      <h4 class="mainTitle text-center">Company Profile</h4>
      <div class="row mb-3 justify-content-start">
        
        <a href="/companies" class="btn btn-secondary size-14 min-100 text-center">
          <i class="fa fa-arrow-left square mr-1"></i>
          <span>Back</span>
        </a>
      </div>
      <div class="row">
        <div class="col-md-3">
          <div class="row">
            <div class="col-md-11 companyProfile shadow-light radius-5 bgWhite text-left">
              <%if (data.image.length > 0) { %>
                <img
                  src="/uploads/<%= data.image %>"
                  width="150"
                  height="150"
                  alt="Logo"
                  class="imgCircle"
                />
              <% } else {%>
                <img
                  src="http://placehold.it/200x200"
                  width="150"
                  height="150"
                  alt="Logo"
                  class="imgCircle"
                />
              <% } %>
              <h3 class="text text-center mt-3"><%= data.name %></h3>
              <div class="borderGrayBottom my-3"></div>
              <i class="fa fa-map-marker square"></i>
              <span class="subText"><%= data.city %>, <%= data.country %></span>
              <br />
              <i class="fa fa-building-o square"></i>
              <span class="subText"><%= data.sector %></span>
              <br />
              <i class="fa fa-external-link square" ></i>
              <a class="subText orange-color" href="http://<%= data.webiste %>" value="http://<%= data.webiste %>"target="_blank">
                http://<%= data.website %>
              </a>
              <div class="borderGrayBottom my-3"></div>
              <h3 class="text mb-1">Average rating</h3>
              <%if (data.ratingNumber.length > 1) {%>
                <p class="subText mb-0">Based on <%= data.ratingNumber.length %> reviews</p>
              <%} else {%>
                <p class="subText mb-0">Based on <%= data.ratingNumber.length %> review</p>
              <% } %>
              <h5 class="star mb-0" data-score="<%= average %>"></h5>
    
              <div class="borderGrayBottom my-3"></div>

              <div class="groupBtn">
                <% if(user.company.name != data.name) {%>
                  <a
                    href="/company/register-employee/<%= id %>"
                    class="btn btn-block btn-secondary"
                  >
                    Register me as an employee
                  </a>
                <% } else { %>
                  <h2 class="text text-center orange-color mb-3">You are an employee</h2>
                <% }%>
                <a
                  href="/review/<%= data._id %>"
                  class="btn btn-block btn-secondary"
                >
                  Rate this company
                </a>
      
                <a
                  href="/<%= data.name %>/employees"
                  class="btn btn-block btn-secondary"
                >
                  View Company Employees
                </a>
              </div>
            </div>
            <div class="col-md-1"></div>
          </div>
        </div>

        <div class="col-md-9">
          <div class="row shadow-light radius-5 bgWhite">
            <div class="col-md-4 borderGrayRight">
              <div class="text-center">
                <h1 class="subTitle"><%= data.ratingNumber.length %></h1>
                <h2 class="text">Ratings (times)</h2>
                <h3 class="subText">Total ratings received</h3>
              </div>
            </div>

            <div class="col-md-4 borderGrayRight">
              <div class="text-center">
                <h1 class="subTitle"><%= data.ratingSum %></h1>
                <h2 class="text">Total Stars</h2>
                <h3 class="subText">Total stars received</h3>
              </div>
            </div>

            <div class="col-md-4">
              <div class="text-center">
                <h1 class="subTitle">
                  <span class="star" data-score="<%= average %>"></span>
                </h1>
                <h2 class="text">Average Rating (<%= average %>)</h2>
                <h3 class="subText">Based on 5 reviews</h3>
              </div>
            </div>
          </div>
          <div class="row mt-3 justify-content-end">
            <a href="/review/<%= id %>" class="btn btn-secondary btn-review"> Write Review</a>
          </div>
          <div class="reviewList">
            <h2 class="row subTitle mb-3">Reviews (<%= data.ratingNumber.length %>)</h2>
            <% if(data.companyRating.length > 0) {%> 
              <% data.companyRating.forEach(function(val){ %>
                <div class="row reviewItem mb-3 pb-3">
                  <div class="reviewImage">
                    <% if (val.companyImage.length > 0) {%>
                      <img
                        src="/uploads/<%= val.companyImage %>"
                        width="40px"
                        height="40px"
                        alt="Logo"
                        class="imgCircle"
                      />
                    <%} else {%>
                      <img
                        src="http://placehold.it/50x50"
                        width="40px"
                        height="40px"
                        alt="Logo"
                        class="imgCircle"
                      />
                    <%}%>
                  </div>
    
                  <div class="reviewInfo">
                    <span class="mb-1">
                      <a class="orange-color text-capitalize text" href="#"><%= val.userFullname %></a> 
                      <% if (val.userRole) { %>
                        <span class="subText gray-color text-capitalize">| <%=val.userRole %></span>
                      <% } %>
  
                      <% if (val.companyName) { %>
                        <span class="subText text-capitalize mb-1">| <%= val.companyName %></span>
                      <% } %>
                      
                    </span>
                    
                    <p class="subText mb-0"><%= val.userReview %></p>
                    <span
                      class="star"
                      data-score="<%= val.userRating %>"
                    ></span>
                  </div>
                </div>
              <% })%>
            <% }%>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3"></div>
        
      </div>
    </div>
  </div>
</div>
