<% layout('layout') %>

<div class="container">
  <div class="text-center">
    <h1 class="mainTitle">
      <a href="/">RateMe</a>
    </h1>
    <h2 class="title">Reset password</h2>
  </div>

  <div class="row">
    <div class="col-md-4 offset-md-4">
      <form method="POST">
        <div class="form-group">
          <input
            id="password"
            class="form-control"
            name="password"
            type="password"
            autocomplete="on"
            placeholder="Password"
          />
        </div>

        <div class="form-group">
          <input
            id="cpassword"
            class="form-control"
            name="cpassword"
            type="password"
            autocomplete="on"
            placeholder="Comfirm password"
          />
        </div>

        <div class="form-group" id="submit">
          <input
            type="submit"
            value="Reset password"
            class="form-control btn btn-secondary"
            name="reset"
          />
        </div>
      </form>
      <div>
        <h4 class="subText">Already reset your password? <a href="/login">Login</a></h4>
      </div>
    </div>
    <div class="col-md-4 errors">
      <% if(hasErrors) {%>
        <% for(var i = 0; i < messages.length; i++) {%>
          <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">
              &times;
            </a>
            <%= messages[i] %>
          </div>
        <% } %>
      <% } %> 
      <% if(noErrors) {%>
        <div class="alert alert-success">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">
            &times;
          </a>
          <%= success %>
        </div>
      <% } %>
    </div>
  </div>
</div>
