<% layout('layout') %>

<div class="relative height-100vh">

  <div class="container absolute middle half width-100">
    <div class="text-center">
      <h1 class="mainTitle mb-4 colorMain logo">
        Rate Me
      </h1>
      <h2 class="title mb-3">Sign Up</h2>
    </div>

    <div class="row">
      <div class="col-md-4 offset-md-4">
        <form method="POST" class="" id="signupForm" action="/signup">
          <div class="form-group">
            <input id="fullname" class="form-control" name="fullname" type="text" autocomplete="on"
              placeholder="Full name"></div>

          <div class="form-group">
            <input id="email" class="form-control" name="email" type="text" autocomplete="on" placeholder="Email"></div>

          <div class="form-group">
            <input id="password" class="form-control" name="password" type="password" placeholder="Password"></div>


          <div class="form-group">
            <input type="submit" id="submit" value="Sign up" class="form-control btn btn-secondary" name="submit"></div>
        </form>
        <div class="form-group">
          <a href="/auth/facebook" type="button" class="btn btn-facebook">
            <i class="fa fa-facebook"></i>
            <span>Login with Facebook</span>
          </a>
        </div>
        <div>
          <h4 class="text">Already have an account?
            <a href="/login" class="colorMain">Login</a>
          </h4>
        </div>
      </div>
      <div class="col-md-4 errors">
        <% if(hasErrors) {%>
          <% for(var i = 0; i <messages.length; i++) {%>
            <div class="alert alert-danger">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">
                &times;
              </a>
              <%= messages[i] %>
            </div>
          <% } %>
        <% } %>
      </div>
    </div>
  </div>
</div>