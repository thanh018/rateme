<% layout('layout') %>
<div class="relative">
  <div class="container login-page pt-100">
    <div class="row">
      <div class="col-md-4 offset-md-4 px-4 py-5 radius-10 shadow-light bgWhite">
        <div class="text-center">
          <h1 class="mainTitle mb-3 logo">RateMe</h1>
          <h2 class="title mb-4">Login</h2>
        </div>
        <form method="POST" action="/login">
          <div class="form-group">
            <input
              id="email"
              class="form-control"
              name="email"
              type="text"
              autocomplete="on"
              placeholder="Email"
            />
          </div>
    
          <div class="form-group">
            <input
              id="password"
              class="form-control"
              name="password"
              type="password"
              placeholder="Password"
            />
          </div>
    
          <div class="form-group">
            <input
              type="submit"
              id="login"
              value="Login"
              class="form-control btn btn-primary"
              name="login"
            />
          </div>
        </form>
        <div class="form-group">
          <a
            href="/auth/facebook"
            type="button"
            class="btn btn-facebook"
          >
            <i class="fa fa-facebook"></i>
            <span>Login with Facebook</span>
          </a>
        </div>
        <div class="form-group-checkbox d-flex align-items-center">
          <input
            type="checkbox"
            name="rememberme"
            class=""
            value="yes"
          />
          <span>&nbsp;&nbsp;Remember me</span>
        </div>
        <div>
          <h4 class="text">
            <span>Don't have an account? </span>
            <a href="/signup" class="">Sign up</a>
          </h4>
          <h4 class="text mb-0"><a href="/forgot" class="colorGray">Forgot your password</a></h4>
        </div>
      </div>
      <div class="col-md-4 errors">
        <% if(hasErrors) {%> 
          <% for(var i = 0; i < messages.length; i++) {%>
            <div class="alert alert-danger">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">
                &times;
              </a>
              <%= messages[i] %>
            </div>
          <% } %> 
        <% } %>
      </div>
    </div>
  </div>
</div>

