<% layout('layout2') %>

<div id="wrapper">
  <div id="page-content-wrapper">
    <% include ../partials/navbar %>
    <div class="container">
      <div class="text-center">
        <h2 class="mainTitle">Write Review</h2>
      </div>
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <form action="" method="post">
            <input
              class="form-control"
              id="id"
              value="<%= data._id %>"
              type="hidden"
            />
            <div class="form-group">
              <input
                id="sender"
                class="form-control"
                name="sender"
                value="<%= user.company.name %>"
                type="text"
                placeholder="Sending Company"
              />
            </div>
  
            <div class="form-group">
              <input
                id="receiver"
                class="form-control"
                name="receiver"
                value="<%= data.name %>"
                type="text"
                placeholder="Receiving Company"
              />
            </div>
  
            <div class="form-group">
              <div id="star_rating">
                <img id="1_star" src="/images/star_off.png" alt="1" title="Bad" />
                <img
                  id="2_star"
                  src="/images/star_off.png"
                  alt="2"
                  title="Poor"
                />
                <img
                  id="3_star"
                  src="/images/star_off.png"
                  alt="3"
                  title="Fair"
                />
                <img
                  id="4_star"
                  src="/images/star_off.png"
                  alt="4"
                  title="Good"
                />
                <img
                  id="5_star"
                  src="/images/star_off.png"
                  alt="5"
                  title="Excellent"
                />
  
                <span class="ml-3" id="showTitle"></span>
              </div>
            </div>
  
            <div class="form-group">
              <textarea
                name="review"
                id="review"
                rows="8"
                cols="80"
                class="form-control"
                placeholder="Review"
              ></textarea>
            </div>
  
            <div class="form-group">
              <input
                type="submit"
                id="rate"
                value="Create"
                class="form-control btn btn-primary"
                name="rate"
              />
            </div>
          </form>
        </div>
        <div class="col-md-3">
          <% if(hasMsg) {%>
            <div class="alert alert-success"><%= msg %></div>
          <% }%>
        </div>
      </div>
    </div>
  </div>
</div>
